---
const { lang = 'en' } = Astro.props;
const isEN = lang === 'en';

const title = isEN ? 'Somali Constitution' : 'Dastuurka Soomaaliya';
const subtitle = isEN
  ? 'Clean, offline-friendly, and searchable. Built for clarity â€” in English and Somali.'
  : 'Nadiif, offline u diyaarsan, lana raadin karo. Laba luqadood: Soomaali & Ingiriisi.';
const cta1 = isEN ? 'Browse Chapters' : 'Cutubyada';
const cta2 = isEN ? 'Download PDF' : 'Download PDF';
---

<section class="relative overflow-hidden pt-28 pb-16 sm:pt-32 sm:pb-20">
  <!-- full-bleed Nuxt-like background -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute inset-0 bg-gradient-to-b from-sky-100/70 via-white to-white dark:from-sky-500/10 dark:via-zinc-950 dark:to-zinc-950"></div>
    <div class="absolute -left-28 top-10 h-72 w-72 rounded-full bg-sky-300/35 blur-3xl dark:bg-sky-400/10"></div>
    <div class="absolute right-0 top-24 h-72 w-72 rounded-full bg-cyan-300/25 blur-3xl dark:bg-cyan-400/10"></div>
  </div>

  <div class="mx-auto max-w-[90rem] px-4 sm:px-6 lg:px-8">
    <div class="grid items-center gap-10 md:gap-12 md:grid-cols-2">
      <!-- Mobile: image first -->
      <div class="order-1 md:order-2">
        <div class="relative">
  <div class="relative overflow-hidden rounded-3xl border border-sky-200/60   dark:border-sky-400/15 dark:bg-zinc-950/50">
    <div class="pointer-events-none absolute inset-0">
      <div class="absolute -inset-24 rounded-full  blur-3xl"></div>
    </div>
    <div class="relative flex min-h-[420px] items-center justify-center p-8">
      <img src="/somalia-emblem.svg" alt="Somalia Emblem" class="h-[240px] md:h-[380px] lg:h-[520px] w-auto max-w-none opacity-95" loading="eager" />
    </div>
  </div>
</div>
      </div>

      <div class="order-2 md:order-1">
        <p class="text-sm font-semibold text-sky-700 dark:text-sky-300">{isEN ? 'Adobted August 1, 2012 Mogadishu, Somalia' : 'La Ansixiyey August 1, 2012 Muqdishu, Soomaaliya'}</p>
        <h1 class="mt-4 text-4xl font-extrabold tracking-tight sm:text-7xl">
          <span class="bg-gradient-to-r from-sky-500 to-sky-700 bg-clip-text text-transparent dark:from-sky-300 dark:to-sky-400">
            {title}
          </span>
        </h1>
        <p class="mt-5 max-w-prose text-lg text-zinc-600 dark:text-zinc-300">{subtitle}</p>

        <div class="mt-9 flex flex-col gap-3 sm:flex-row sm:items-center">
          <a
            href={`/${lang}#chapters`}
            class="inline-flex items-center justify-center rounded-full bg-sky-600 px-4 sm:px-6 py-3 text-sm font-semibold text-white shadow hover:bg-sky-700"
          >
            {cta1}
          </a>
          <a
            href="/sanity"
            class="inline-flex items-center justify-center rounded-full border border-zinc-200 bg-white px-4 sm:px-6 py-3 text-sm font-semibold text-zinc-800 shadow-sm hover:border-zinc-300 dark:border-zinc-800 dark:bg-zinc-950 dark:text-zinc-100 dark:hover:bg-zinc-900"
          >
            {cta2}
          </a>
        </div>

        <div class="mt-8 flex flex-wrap items-center gap-2 text-xs text-zinc-500 dark:text-zinc-400">
          <span class="rounded-full border border-zinc-200 bg-white px-3 py-1 dark:border-zinc-800 dark:bg-zinc-950">15 Chapters</span>
          <span class="rounded-full border border-zinc-200 bg-white px-3 py-1 dark:border-zinc-800 dark:bg-zinc-950">143 Articles</span>
          <span class="rounded-full border border-zinc-200 bg-white px-3 py-1 dark:border-zinc-800 dark:bg-zinc-950">Sanity</span>
        </div>
      </div>
    </div>
  </div>
</section>

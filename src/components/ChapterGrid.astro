---
import type { Chapter, Lang } from '../lib/data';
const { lang = 'en', chapters = [] as Chapter[] } = Astro.props;

function pick(obj: any, lang: Lang) {
  return obj?.[lang] ?? obj?.en ?? obj?.so ?? '';
}
---

<section id="chapters" class="py-16">
  <div class="w-full border-t border-zinc-200/70 bg-zinc-50 py-14 dark:border-zinc-800/70 dark:bg-zinc-950/40">
    <div class="mx-auto max-w-[90rem] px-4 sm:px-4 sm:px-6 lg:px-8">
      <div class="max-w-2xl">
        <h2 class="text-2xl font-bold tracking-tight text-zinc-900 dark:text-white">
          {lang === 'en' ? 'Chapters' : 'Cutubyada'}
        </h2>
        <p class="mt-2 text-base text-zinc-600 dark:text-zinc-300">
          {lang === 'en'
            ? 'Select a chapter to view its articles. Each article includes a Quick Copy button.'
            : 'Dooro cutub si aad u aragto qodobadiisa. Qodob kasta wuxuu leeyahay badhanka Quick Copy.'}
        </p>
      </div>

      <div class="mt-10 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {chapters.map((c: Chapter) => (
          <a
            href={`/${lang}/chapters/${c.slug}`}
            class="group rounded-2xl border border-zinc-200 bg-white p-6 shadow-sm transition hover:shadow-md dark:border-zinc-800 dark:bg-zinc-950"
          >
            <!-- top icon row -->
            <div>
            </div>

            <p class="mt-1 text-sm font-semibold text-zinc-500 dark:text-zinc-400">
              {lang === 'en' ? 'Chapter' : 'Cutubka'} {c.number}
            </p>
            <h3 class="mt-2 text-xl font-bold tracking-tight text-zinc-900 dark:text-white">
              {pick(c.title, lang)}
            </h3>
            <p class="mt-4 text-base leading-7 text-zinc-600 dark:text-zinc-300">
              {pick(c.description, lang)}
            </p>

            <div class="mt-6 border-t border-zinc-200/70 pt-4 dark:border-zinc-800/70">
              <div class="flex items-center justify-between text-sm text-zinc-500 dark:text-zinc-400">
                <div class="flex items-center gap-3">
                  <span class="inline-flex items-center gap-2 rounded-full bg-sky-50/70 px-3 py-1 text-xs font-semibold text-sky-700 ring-1 ring-sky-200/70 dark:bg-sky-500/10 dark:text-sky-300 dark:ring-sky-400/25">{c.articleCount} {lang === 'en' ? 'Articles' : 'Qodobo'}</span>
                </div>

                <span class="inline-flex h-9 w-9 items-center justify-center rounded-xl border border-zinc-200 bg-white text-zinc-500 transition group-hover:bg-zinc-50 dark:border-zinc-800 dark:bg-zinc-950 dark:text-zinc-300 dark:group-hover:bg-zinc-900">
                  <span aria-hidden="true">â†’</span>
                </span>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>
</section>

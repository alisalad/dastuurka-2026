---
const { lang = 'so' } = Astro.props;
const other = lang === 'en' ? 'so' : 'en';
const base = '/' + lang;

const nav = [
  { label: 'Home', href: base },
  { label: 'Dastuurka', href: `${base}#chapters` },
  { label: 'States', href: '#' },
  { label: 'Laws', href: '#' },
  { label: 'Resources', href: '#', hasCaret: true },
];

---

<header class="sticky top-0 z-50 w-full border-b border-zinc-200/70 bg-white/80 backdrop-blur supports-[backdrop-filter]:bg-white/70 dark:border-zinc-700/60 dark:bg-zinc-900/70">
  <div class="mx-auto flex max-w-[90rem] items-center justify-between px-4 py-4 sm:px-6 lg:px-8">
    <div class="flex items-center gap-3">
      <a href={base} class="flex items-center gap-2 font-semibold tracking-tight text-zinc-900 dark:text-white">
        <!-- Somalia Star Logo with Gradient -->
        <svg viewBox="0 0 24 24" class="h-7 w-7" aria-hidden="true">
          <defs>
            <linearGradient id="starGradient" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" style="stop-color:#0ea5e9;stop-opacity:1" />
              <stop offset="100%" style="stop-color:#0369a1;stop-opacity:1" />
            </linearGradient>
          </defs>
          <path fill="url(#starGradient)" d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <span class="text-lg">Dastuurka</span>
      </a>
    </div>

    <nav class="hidden items-center gap-7 text-sm font-semibold text-zinc-600 dark:text-zinc-300 md:flex">
      {nav.map((i) => (
        <a class="inline-flex items-center gap-1 hover:text-zinc-900 dark:hover:text-white" href={i.href}>
          {i.label}
          {i.hasCaret ? (
            <svg viewBox="0 0 20 20" class="h-4 w-4 text-zinc-400" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 0 1 1.06.02L10 11.2l3.71-3.97a.75.75 0 1 1 1.08 1.04l-4.25 4.55a.75.75 0 0 1-1.08 0L5.21 8.27a.75.75 0 0 1 .02-1.06Z" clip-rule="evenodd"/>
            </svg>
          ) : null}
        </a>
      ))}
    </nav>

    <!-- Search Button (Desktop) -->
    <div class="hidden md:flex flex-1 max-w-sm mx-8">
      <button
        type="button"
        data-open-search
        class="group flex w-full items-center gap-3 rounded-lg border border-sky-200/80 bg-sky-50/50 px-4 py-2.5 text-sm font-semibold text-sky-900 shadow-sm transition-all hover:bg-sky-100/60 hover:border-sky-300/80 hover:shadow-md active:scale-[0.98] dark:border-sky-400/20 dark:bg-sky-500/5 dark:text-sky-200 dark:hover:bg-sky-500/10 dark:hover:border-sky-400/30"
        aria-label="Search constitution"
        title="Search constitution"
      >
        <svg viewBox="0 0 24 24" class="h-5 w-5 text-sky-600 dark:text-sky-400 flex-shrink-0" fill="none" stroke="currentColor" stroke-width="2.5">
          <circle cx="11" cy="11" r="7"></circle>
          <path d="M20 20l-3.5-3.5"></path>
        </svg>
        <span class="flex-1 text-left text-zinc-500/70 dark:text-zinc-400/60 font-normal truncate">Raadi Cutub, Qodob, Article, Chapter</span>
        <kbd class="hidden lg:inline-flex items-center gap-1 rounded border border-sky-300/60 bg-white/60 px-2 py-1 text-xs font-medium text-sky-600 dark:border-sky-600/40 dark:bg-sky-950/40 dark:text-sky-400">
          <span class="text-sm">⌘</span>K
        </kbd>
      </button>
    </div>

    <div class="flex items-center gap-1.5">
      <button type="button" data-open-mobile class="inline-flex items-center justify-center rounded-lg p-2 text-zinc-600 hover:bg-zinc-100 hover:text-zinc-900 dark:text-zinc-300 dark:hover:bg-zinc-900 dark:hover:text-white md:hidden" aria-label="Open menu">
        <svg viewBox="0 0 24 24" class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 6h16M4 12h16M4 18h16"/></svg>
      </button>

      <!-- Mobile Search Icon (shown only on mobile) -->
      <button type="button" data-open-search class="md:hidden inline-flex items-center justify-center rounded-lg p-2 text-zinc-600 hover:bg-zinc-100 hover:text-zinc-900 dark:text-zinc-300 dark:hover:bg-zinc-900 dark:hover:text-white" aria-label="Search" title="Search (⌘K)">
        <svg viewBox="0 0 24 24" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2"><circle cx="11" cy="11" r="7"></circle><path d="M20 20l-3.5-3.5"></path></svg>
      </button>

      <button type="button" data-toggle-theme class="inline-flex items-center justify-center rounded-lg p-2 text-zinc-600 hover:bg-zinc-100 hover:text-zinc-900 dark:text-zinc-300 dark:hover:bg-zinc-900 dark:hover:text-white" aria-label="Toggle theme" title="Toggle theme">
        <svg viewBox="0 0 24 24" class="h-5 w-5 dark:hidden" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 3v2M12 19v2M4.22 6.22l1.42 1.42M18.36 18.36l1.42 1.42M3 12h2M19 12h2M4.22 17.78l1.42-1.42M18.36 5.64l1.42-1.42"/><circle cx="12" cy="12" r="4"/></svg>
        <svg viewBox="0 0 24 24" class="h-5 w-5 hidden dark:block" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 12.8A8.5 8.5 0 0 1 11.2 3a6.5 6.5 0 1 0 9.8 9.8Z"/></svg>
      </button>

      <a href={`/${other}`} class="ml-1 inline-flex items-center gap-1 rounded-full border border-zinc-200/80 bg-white/80 px-3 py-1.5 text-xs font-bold text-zinc-700 hover:bg-zinc-50 dark:border-zinc-700/70 dark:bg-zinc-800/60 dark:text-zinc-200 dark:hover:bg-zinc-700" aria-label="Toggle language" title="Language">
        <span class={lang === 'so' ? 'text-sky-700 dark:text-sky-300' : ''}>SO</span>
        <span class="text-zinc-400">/</span>
        <span class={lang === 'en' ? 'text-sky-700 dark:text-sky-300' : ''}>EN</span>
      </a>
    </div>
  </div>

  <!-- Mobile menu - pushes content down -->
  <div id="mobileMenu" class="hidden border-b border-zinc-200 bg-white dark:border-zinc-700 dark:bg-zinc-800 md:hidden">
    <div class="mx-auto max-w-[90rem] px-4 py-4 sm:px-6 lg:px-8">
      <div class="grid gap-1">
        {nav.map((i) => (
          <a href={i.href} class="rounded-lg px-4 py-3 text-base font-semibold text-zinc-900 hover:bg-sky-50 hover:text-sky-700 dark:text-white dark:hover:bg-zinc-800" data-mobile-link>
            {i.label}
          </a>
        ))}
        <a href={`${base}#chapters`} class="rounded-lg px-4 py-3 text-base font-semibold text-zinc-900 hover:bg-sky-50 hover:text-sky-700 dark:text-white dark:hover:bg-zinc-800" data-mobile-link>
          {lang === 'en' ? 'Chapters' : 'Cutubyo'}
        </a>
      </div>

      <div class="mt-4 border-t border-zinc-200 pt-4 dark:border-zinc-800">
        <button type="button" data-open-search class="flex w-full items-center gap-3 rounded-lg px-4 py-3 text-base font-semibold text-zinc-900 hover:bg-sky-50 hover:text-sky-700 dark:text-white dark:hover:bg-zinc-800">
          <svg viewBox="0 0 24 24" class="h-5 w-5 text-zinc-600 dark:text-zinc-400" fill="none" stroke="currentColor" stroke-width="2"><circle cx="11" cy="11" r="7"></circle><path d="M20 20l-3.5-3.5"></path></svg>
          <span>Search</span>
          <span class="ml-auto rounded-md border border-zinc-300 bg-zinc-50 px-2 py-1 text-xs text-zinc-600 dark:border-zinc-700 dark:bg-zinc-800 dark:text-zinc-400">⌘K</span>
        </button>

        <button type="button" data-toggle-theme class="mt-2 flex w-full items-center gap-3 rounded-lg px-4 py-3 text-base font-semibold text-zinc-900 hover:bg-sky-50 hover:text-sky-700 dark:text-white dark:hover:bg-zinc-800">
          <svg viewBox="0 0 24 24" class="h-5 w-5 text-zinc-600 dark:text-zinc-400" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 3v2M12 19v2M4.22 6.22l1.42 1.42M18.36 18.36l1.42 1.42M3 12h2M19 12h2M4.22 17.78l1.42-1.42M18.36 5.64l1.42-1.42"/><circle cx="12" cy="12" r="4"/></svg>
          <span>Theme</span>
        </button>
      </div>
    </div>
  </div>

  <script is:inline>
    (function () {
      const themeBtns = document.querySelectorAll('[data-toggle-theme]');
      themeBtns.forEach((b) =>
        b.addEventListener('click', () => {
          const isDark = document.documentElement.classList.toggle('dark');
          try { localStorage.setItem('theme', isDark ? 'dark' : 'light'); } catch {}
        })
      );

      window.addEventListener('keydown', (e) => {
        const mod = e.metaKey || e.ctrlKey;
        if (mod && e.key.toLowerCase() === 'k') {
          e.preventDefault();
          document.querySelectorAll('[data-open-search]').forEach((x) => (x instanceof HTMLElement) && x.click());
        }
        if (e.key === 'Escape') {
          const mm = document.getElementById('mobileMenu');
          if (mm && !mm.classList.contains('hidden')) mm.classList.add('hidden');
        }
      });

      const mobileMenu = document.getElementById('mobileMenu');
      const openBtn = document.querySelector('[data-open-mobile]');
      const links = document.querySelectorAll('[data-mobile-link]');

      function toggleMobile() {
        mobileMenu?.classList.toggle('hidden');
      }

      openBtn?.addEventListener('click', toggleMobile);
      links.forEach((l) => l.addEventListener('click', () => mobileMenu?.classList.add('hidden')));
    })();
  </script>
</header>
